.top {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #eeeeee;
  padding-top: 10rpx;
}
.song {
  width: 90%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bg {
  width: 150rpx;
  height: 50rpx;
  border-radius: 25rpx;
  font-size: 14px;
  border: 1px solid #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.img {
  width: 100%;
  height: 220rpx;
  border-radius: 15rpx;
}
.imhg {
  width: 30%;
  margin-top: 10rpx;
  position: relative;
}
.font {
  font-size: 14px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.n-top {
  position: absolute;
  top: 0;
  right: 10rpx;
  color: white;
  font-size: 12px;
}
.icon {
  width: 20rpx;
  height: 20rpx;
}